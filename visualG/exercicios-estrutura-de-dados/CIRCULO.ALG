Algoritmo "circulo"

Var
// Seção de Declarações das variáveis 

   raio, area : real


Inicio
// Seção de Comandos, procedimento, funções, operadores, etc...

   escreva("Digite o valor do raio do circulo: ")
   leia(raio)
   
   area <- PI * Exp(raio, 2)
   escreva("AREA = ", area:8:4)


Fimalgoritmo